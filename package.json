{
    "name": "sierpinski-triangle",
    "version": "1.0.0",
    "description": "A basic visualisation of the sierpinski triangle",
    "scripts": {
        "build:electron": "tsc",
        "watch:electron": "tsc -w",
        "lint": "eslint -c .eslintrc --ext .ts ./src",
        "start": "npm run bundle:main && npm run build:electron && electron ./dist/main.js",
        "bundle:main": "webpack --mode=production",
        "watch:main": "webpack --mode=production --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ActionSeeker/sierpinski-triangle.git"
    },
    "keywords": [
        "poem",
        "polish",
        "visualisation",
        "math",
        "art"
    ],
    "author": "Luv Karakoti",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ActionSeeker/freedom-poem-visualisation/issues"
    },
    "homepage": "https://github.com/ActionSeeker/freedom-poem-visualisation#readme",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "electron": "^22.0.0",
        "eslint": "^7.32.0",
        "husky": "^8.0.2",
        "pretty-quick": "^3.1.3",
        "ts-loader": "^9.3.0",
        "typescript": "^4.7.2",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0",
        "webpack-node-externals": "^3.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
